// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Prefer POSTGRES_PRISMA_URL (Supabase connection pooler) - fallback to DATABASE_URL is handled in lib/prisma.ts
  // Make sure password is URL-encoded in .env (%24 for $, %21 for !, etc.)
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizations Organization[]
  plans         Plan[]

  @@map("users")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  plans Plan[]

  @@map("organizations")
}

model Plan {
  id        String   @id @default(cuid())
  userId    String
  name      String
  currency  String   @default("EUR")
  startMonth DateTime
  months    Int

  organizationId String?
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  revenueStreams RevenueStream[]
  expenses       Expense[]
  people         Person[]
  metrics        Metric[]
  assumptions    GlobalAssumptions?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("plans")
}

model GlobalAssumptions {
  id               String   @id @default(cuid())
  planId           String   @unique
  plan             Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)

  // Revenue drivers
  cac              Decimal  @db.Decimal(12, 2)  // Customer Acquisition Cost in EUR
  churnRate        Decimal  @db.Decimal(5, 2)   // Monthly churn (e.g., 3.00 = 3%)
  expansionRate    Decimal  @db.Decimal(5, 2)   // Monthly expansion rate
  baseAcv          Decimal  @db.Decimal(12, 2)  // Base Annual Contract Value in EUR

  // Cost drivers
  salaryTaxRate    Decimal  @db.Decimal(5, 2)   // Employer tax rate (e.g., 35.00 = 35%)
  salaryGrowthRate Decimal  @db.Decimal(5, 2)   // Annual salary growth
  inflationRate    Decimal  @db.Decimal(5, 2)   // Annual inflation rate

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("global_assumptions")
}

model RevenueStream {
  id        String   @id @default(cuid())
  name      String
  amount    Float
  frequency String   // "monthly", "quarterly", "annually"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  planId String
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("revenue_streams")
}

model Expense {
  id         String            @id @default(cuid())
  planId     String
  plan       Plan              @relation(fields: [planId], references: [id], onDelete: Cascade)

  name       String
  category   String
  amount     Decimal           @db.Decimal(18, 2)
  frequency  ExpenseFrequency  @default(MONTHLY)
  startMonth DateTime
  endMonth   DateTime?

  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@map("expenses")
}

enum ExpenseFrequency {
  MONTHLY
  ONE_TIME
  YEARLY
}

model Person {
  id        String   @id @default(cuid())
  name      String
  role      String
  salary    Float
  startDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  planId String
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("people")
}

model Metric {
  id        String   @id @default(cuid())
  name      String
  value     Float
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  planId String
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("metrics")
}

model ForecastScenario {
  id         String   @id @default(cuid())
  name       String
  startMonth DateTime // First month of forecast (YYYY-MM-01)
  months     Int      // Number of months to forecast
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  plgAssumptions    PLGRevenueAssumptions?
  salesAssumptions  SalesRevenueAssumptions?
  partnerAssumptions PartnerRevenueAssumptions?

  @@map("forecast_scenarios")
}

model PLGRevenueAssumptions {
  id                  String   @id @default(cuid())
  scenarioId          String   @unique
  monthlyTraffic      Decimal  @db.Decimal(12, 2) // Average or starting month traffic
  trafficGrowthRate   Decimal  @db.Decimal(5, 4)  // % per month (e.g., 0.05 for 5%)
  signupRate          Decimal  @db.Decimal(5, 4)  // 0-1 (e.g., 0.02 for 2%)
  paidConversionRate  Decimal  @db.Decimal(5, 4)  // 0-1
  churnRate           Decimal  @db.Decimal(5, 4)  // 0-1 per month
  arpa                Decimal  @db.Decimal(12, 2) // Monthly ARPA
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  scenario ForecastScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@map("plg_revenue_assumptions")
}

model SalesRevenueAssumptions {
  id                String   @id @default(cuid())
  scenarioId        String   @unique
  monthlyLeads      Decimal  @db.Decimal(12, 2)
  leadGrowthRate    Decimal  @db.Decimal(5, 4)   // % per month
  sqlRate           Decimal  @db.Decimal(5, 4)   // 0-1 (SQL = Sales Qualified Leads)
  winRate           Decimal  @db.Decimal(5, 4)   // 0-1
  salesCycleMonths  Int                          // Sales cycle length in months
  acv               Decimal  @db.Decimal(12, 2)  // Annual Contract Value
  churnRate         Decimal  @db.Decimal(5, 4)   // 0-1 per month on MRR
  expansionRate     Decimal  @db.Decimal(5, 4)   // 0-1 per month on MRR
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  scenario ForecastScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@map("sales_revenue_assumptions")
}

model PartnerRevenueAssumptions {
  id               String   @id @default(cuid())
  scenarioId       String   @unique
  activePartners   Decimal  @db.Decimal(12, 2)
  partnerGrowthRate Decimal @db.Decimal(5, 4)   // % per month
  leadsPerPartner  Decimal  @db.Decimal(12, 2)  // Per month
  conversionRate   Decimal  @db.Decimal(5, 4)   // 0-1
  arpa             Decimal  @db.Decimal(12, 2)  // Monthly ARPA
  revenueShare     Decimal  @db.Decimal(5, 4)   // 0-1 of gross MRR
  churnRate        Decimal  @db.Decimal(5, 4)   // 0-1 per month
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  scenario ForecastScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@map("partner_revenue_assumptions")
}
